= render "posts/header"
.account-new-page
  .account-new-page__low
    .account-new-page__low__title
      新規登録
    .account-new-page__low__contents
      .account-new-page__low__contents__left

 
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            = f.label :name
            %br/
            = f.text_field :name, autofocus: true, autocomplete: "name"
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          - if @sns_id.present?
            = hidden_field_tag :sns_auth, true
          - else
            .field
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password"
            .field
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password"
          .actions
            = f.submit "Sign up"
      .account-new-page__low__contents__right
        = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post


